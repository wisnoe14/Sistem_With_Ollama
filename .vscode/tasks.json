{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start FastAPI Server",
			"type": "shell",
			"command": "uvicorn",
			"args": [
				"app.main:app",
				"--host",
				"0.0.0.0",
				"--port",
				"8000",
				"--reload"
			],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		}
	]
}